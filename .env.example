# Environment variables for Eva Accessories
# Copy this file to .env and fill in the values

# Database (Prisma/Neon)
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# NextAuth.js
# Generate a secret with `openssl rand -base64 32`
AUTH_SECRET="your_generated_auth_secret"
AUTH_URL="http://localhost:3000" # Set to your production URL in prod (e.g. https://eva-accessories.vercel.app)
NEXTAUTH_URL="http://localhost:3000" # Same as AUTH_URL

# Google OAuth (get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# Stripe (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..." # Get this after setting up the webhook endpoint

# App URLs
NEXT_PUBLIC_URL="http://localhost:3000" # Set to your production URL in prod

# Resend Email (get from https://resend.com/api-keys)
RESEND_API_KEY="re_..."
EMAIL_FROM="Eva Accessories <onboarding@resend.dev>" # Or your verified domain email
EMAIL_REPLY_TO="support@example.com"
